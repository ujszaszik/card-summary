<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leftBalanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_balance_chart"
            android:layout_weight="@integer/one"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/currentBalanceChartView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_balance_chart"
                android:background="@color/balance_current_color"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/overPendingChartView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_balance_chart"
                android:background="@color/balance_pending_color"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightBalanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_balance_chart"
            android:layout_weight="@integer/one"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/underPendingChartView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_balance_chart"
                android:background="@color/balance_pending_color"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/availableBalanceChartView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_balance_chart"
                android:background="@color/balance_available_color"
                android:orientation="horizontal" />
        </LinearLayout>


    </LinearLayout>
</layout>