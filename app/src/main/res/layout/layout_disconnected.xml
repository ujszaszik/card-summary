<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/size_image_error"
        android:layout_height="@dimen/size_image_error"
        app:srcCompat="@drawable/ic_disconnected" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/label_not_connected"
        android:textColor="@color/blue_main"
        android:textSize="@dimen/text_size_highlight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/label_connect_and_try_again"
        android:textColor="@color/blue_main"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>