<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_view_pager"
            android:layout_marginStart="@dimen/margin_pager"
            android:layout_marginEnd="@dimen/margin_pager" />

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/arrowRight"
            android:layout_width="@dimen/size_arrow"
            android:layout_height="@dimen/size_arrow"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_arrow_forward" />
    </FrameLayout>
</layout>